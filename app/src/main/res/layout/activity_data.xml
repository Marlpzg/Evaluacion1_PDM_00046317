<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_title"
        android:textSize="@dimen/title_size"
        android:gravity="center"
        android:textColor="@color/main_text"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="25sp"
            android:textColor="@color/main_text"
            android:padding="10dp"
            android:id="@+id/tv_user"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="25sp"
            android:textColor="@color/main_text"
            android:padding="10dp"
            android:id="@+id/tv_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="25sp"
            android:textColor="@color/main_text"
            android:padding="10dp"
            android:id="@+id/tv_count"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de productos"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/main_text"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_btn_a"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_a"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 1"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_ab"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_b"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 2"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_bb"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_c"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 3"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_cb"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_btn_d"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 4"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_db"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_e"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_c"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 5"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_eb"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_f"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_a"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 6"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_fb"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_btn_g"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_c"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 7"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_gb"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_h"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_a"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 8"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_hb"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn_i"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/box_b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Producto 9"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:paddingTop="5dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/btn_text"
                    android:padding="5dp"
                    android:textSize="30sp"
                    android:id="@+id/count_ib"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_share"
            android:id="@+id/btn_share"/>
    </LinearLayout>

</LinearLayout>